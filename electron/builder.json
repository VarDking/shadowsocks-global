{
  "productName": "ShadowsocksGlobal",
  "files": [
    "build",
    "defaultRules",
    "third_party",
    "resources",
    "!build/static/**/*.map",
    "!third_party/tap-windows6"
  ],
  "asarUnpack": [
    "third_party",
    "defaultRules"
  ],
  "directories": {
    "output": "dist"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": "ia32"
      }
    ],
    "icon": "resources/icon.png"
  },
  "nsis": {
    "perMachine": true,
    "include": "electron/custom_install_steps.nsh",
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true
  }
}
